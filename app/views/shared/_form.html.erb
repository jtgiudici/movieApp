<%= form_for (@movie) do |f| %>
	<fieldset>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</fieldset>
	<fieldset>
		<%= f.label :thumburl %>
		<%= f.text_field :thumburl %>
	</fieldset>
	<fieldset>
		<%= f.label :director %>
		<%= f.text_field :director %>
	</fieldset>
	<fieldset>
		<%= f.label :year %>
		<%= f.text_field :year %>
	</fieldset>
	<fieldset>
		<%= f.label :genre %>
		<%= f.text_field :genre %>
	</fieldset>
	<fieldset class="actions">
		<%= f.submit %>
	</fieldset>
<% end %>